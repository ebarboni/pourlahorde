        $(".vignette").click(
                function ( ) {
                    name = "." + $(this).find('.ppname').text();
                    if ($('.stuff' + name).css('display') === 'inline-flex') {
                        $('.stuff').css({'display': 'none'});
                    } else {
                        $('.stuff').css({'display': 'none'});
                        $('.stuff' + name).css({'display': 'inline-flex'});
